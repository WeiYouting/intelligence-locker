<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyt.intelligencelocker.dao.UserMapper">
    <resultMap id="userMap" type="com.wyt.intelligencelocker.entity.User">
        <id column="id" property="id" jdbcType="INTEGER"></id>
        <result column="phone" property="phone" jdbcType="VARCHAR"></result>
        <result column="name" property="name" jdbcType="VARCHAR"></result>
        <result column="password" property="password" jdbcType="VARCHAR"></result>
        <result column="role" property="role" jdbcType="INTEGER"></result>
        <result column="register_time" property="registerTime" jdbcType="TIMESTAMP"></result>
        <result column="last_online_time" property="lastOnlineTime" jdbcType="TIMESTAMP"></result>
        <result column="integral" property="integral" jdbcType="DOUBLE"></result>
    </resultMap>

    <sql id="User_Column_List">
        id, `phone`, `name`, `password`, `role`, `register_time`, `last_online_time`,`integral`
    </sql>


    <insert id="insertUser" parameterType="com.wyt.intelligencelocker.entity.User" useGeneratedKeys="true"
            keyProperty="id">
        insert into `user`
        <trim prefix="(" suffix=")" suffixOverrides=",">
                `phone`,`password`,
            <if test="name != null">
                `name`,
            </if>
            <if test="role != null">
                `role`,
            </if>
            <if test="registerTime != null">
                `register_time`,
            </if>
            <if test="lastOnlineTime != null">
                `last_online_time`,
            </if>
            <if test="integral != null">
                `integral`,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            #{phone,jdbcType=CHAR},#{password,jdbcType=VARCHAR},
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="role != null">
                #{role,jdbcType=INTEGER},
            </if>
            <if test="registerTime != null">
                #{registerTime,jdbcType=TIMESTAMP},
            </if>
            <if test="lastOnlineTime != null">
                #{lastOnlineTime,jdbcType=TIMESTAMP},
            </if>
            <if test="integral != null">
                #{integral},
            </if>
        </trim>
    </insert>

    <select id="selectUserNum" resultType="java.lang.Integer">
        select count(*) from user where phone = #{tel} limit 1
    </select>


</mapper>
